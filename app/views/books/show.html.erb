<% if flash[:notice] %>
  <p id="notice">
    <%= flash[:notice] %>
  </p>
<% end %>

<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'users/list', user: @user %>
      <%= render 'new', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Book detail</h2>
      <table class='table'>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
              <%= image_tag @user.get_profile_image(50,50) %><br>
              <%= @user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@books.id) do %>
              <%= @books.title %>
              <% end %>
            </td>
            <td><%= @books.body %></td>
            <td>
              <% if @books.user == current_user %>
              <%= link_to "Edit", edit_book_path(@books.id) %>
              <% end %>
            </td>
            <td>
              <% if @books.user == current_user %>
              <%= link_to "Destroy", book_path(@books), method: :delete, "data-confirm" => "本当に削除しますか？" %>
              <% end %>
            </td>
          </tr>
      </table>
    </div>
  </div>
</div>
